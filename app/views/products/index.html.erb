<section class="main-section">
  <div class="container">
    <div class="row">
      <div class="col-12 header-n-breadcrumb">
        <div class="row">
          <div class="col-12 col-md-6">
            <h2>PRODUCTS<%#= "#{@category.name.titleize} - #{@brand.name.titleize}" %></h2>
          </div>
          <div class="col-12 col-md-6 align-self-center">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
                <li class="breadcrumb-item active" aria-current="page">Categories</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-3 order-2 order-md-1 product-side-menu">
        <div class="accordion" id="accordionEx" role="tablist" aria-multiselectable="true">
          <div class="card">
            <div class="card-header product-side-menu-title" role="tab">CATEGORIES</div>
          </div>
          <% @categories.each do |category| %>
            <% show = category.permalink == @category.permalink ? "show" : "" %>
            <% collapsed = category.permalink == @category.permalink ? "" : "collapsed" %>
            <div class="card">
              <div class="card-header" role="tab" id="headingOne">
                <a data-toggle="collapse" data-parent="#accordionEx" href="#<%= category.permalink %>" 
                   aria-expanded="true" aria-controls="collapseOne" class="<%= collapsed %>">
                  <span><%= category.name.titleize %></span> <i class="fa fa-angle-down rotate-icon pull-right"></i>
                </a>
              </div>

              <div id="<%= category.permalink %>" class="collapse <%= show %> card-temp-body" 
                   role="tabpanel" aria-labelledby="headingOne" data-parent="#accordionEx">
                  <div class="card-body">
                    <ul  class="my-fa-ul">
                      <% category.sub_categories.each_with_index do |sub_category, x| %>
                        <%# selected_sub_category = @sub_category.permalink == sub_category.permalink ? "hover" : "" %>
                        <% selected_sub_category = x == 1 ? "hover" : "" %>
                        <li><%= fa_icon "angle-double-right" %>
                          <%= link_to sub_category.name.titleize, "#", class: "#{selected_sub_category}" %>
                        </li>
                      <% end %>
                    </ul>
                  </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
