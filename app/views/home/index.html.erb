<!-- header -->
<%# adjust_header = current_user.nil? ? "" : "logged-banner" %>
<section id="home">
  <div class="container banner-container">
    <div class="row no-p-lr">
      <div class="col-12 no-p-lr banner owl-carousel owl-theme">
        <% @banners.each do |banner| %>
